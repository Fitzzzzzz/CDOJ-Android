<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <cn.edu.uestc.acm.cdoj.ui.contest.textViewModules.ProblemSubmitResultTextView
            android:id="@+id/status_list_item_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="wrongdfganfafdas"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_list_item_language"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:lines="1"
                android:paddingTop="10dp"
                android:text="c++"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:lines="1"
                android:paddingTop="10dp"
                android:text="/"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/status_list_item_codeLength"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:lines="1"
                android:paddingTop="10dp"
                android:text="3044mb"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_list_item_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="fdsfsafdsa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status_list_item_timeCost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:text="fasfdsafdsa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/" />

            <TextView
                android:id="@+id/status_list_item_memoryCost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="fasfdsafdsa" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status_list_item_probOrder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="fdsafsda" />

        <TextView
            android:id="@+id/status_list_item_submitDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:text="fdsafsadfsad" />
    </LinearLayout>
</LinearLayout>