<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_background"
    android:id="@+id/contest_list_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/contest_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ellipsize="end"
        android:textSize="17sp"
        android:textStyle="bold"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/contest_date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/contest_timeLimit"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contest_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <cn.edu.uestc.acm.cdoj_android.layout.list.text.ContestStatus
                android:id="@+id/contest_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:textSize="12sp"
                android:maxLines="1" />

            <cn.edu.uestc.acm.cdoj_android.layout.list.text.ContestPermission
                android:id="@+id/contest_permission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:textSize="12sp"
                android:maxLines="1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
